---
// src/components/About.astro
const hobbies = [
  { icon: "🎸", name: "Guitar" },
  { icon: "💻", name: "Programming" },
  { icon: "🎮", name: "Gaming" },
  { icon: "🎨", name: "Design" },
  { icon: "🏃‍♂️", name: "Running" },
  { icon: "🎵", name: "Music" }
];
---

<!-- About Section -->
<section id="about" class="py-20 px-6 bg-gradient-to-br from-white to-primary-light/20 relative overflow-hidden">
  <!-- Декоративные элементы -->
  <div class="absolute top-20 left-10 w-20 h-20 bg-primary/10 rounded-full blur-xl"></div>
  <div class="absolute bottom-20 right-10 w-32 h-32 bg-secondary/10 rounded-full blur-2xl"></div>
  
  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-800 mb-8 relative">
          About Me
          <span class="text-primary text-3xl ml-2">🌟</span>
          <!-- Декоративная линия -->
          <div class="absolute -bottom-3 left-0 w-16 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
        </h2>
        
        <div class="space-y-6 text-lg text-gray-600 leading-relaxed">
          <p class="text-xl text-gray-700 font-medium">
            Hi there! I'm Sergei, a passionate frontend developer currently based in beautiful <span class="text-primary font-semibold">Serbia</span>
          </p>
          
          <p>
            When I'm not crafting beautiful web experiences, you'll find me exploring various passions that keep my creativity flowing. I believe that diverse interests make better developers!
          </p>
        </div>

        <!-- Hobbies Grid -->
        <div class="mt-8">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">What I love doing:</h3>
          <div class="grid grid-cols-3 gap-4">
            {hobbies.map((hobby) => (
              <div class="group bg-white/70 backdrop-blur-sm rounded-xl p-4 text-center cursor-default hover:bg-primary-light/50 transition-all duration-300 hover:scale-105 hover:shadow-lg border border-orange-100/50">
                <div class="text-2xl mb-2 group-hover:scale-110 transition-transform duration-300">
                  {hobby.icon}
                </div>
                <span class="text-sm font-medium text-gray-600 group-hover:text-primary transition-colors">
                  {hobby.name}
                </span>
              </div>
            ))}
          </div>
        </div>

        <!-- CTA -->
        <div class="mt-8 p-6 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-2xl border border-orange-200/50">
          <p class="text-primary font-semibold mb-2">Ready for new adventures! 🚀</p>
          <p class="text-gray-600 text-sm">
            Have an interesting project? Let's turn your ideas into reality!
          </p>
        </div>
      </div>
      
      <!-- Photo Section -->
      <div class="flex justify-center lg:justify-end">
        <div class="relative group">
          <!-- Декоративные кольца -->
          <div class="absolute -inset-4 bg-gradient-to-r from-primary to-secondary rounded-full opacity-20 group-hover:opacity-30 transition-opacity duration-500 animate-pulse"></div>
          <div class="absolute -inset-8 bg-gradient-to-r from-secondary to-primary rounded-full opacity-10 group-hover:opacity-20 transition-opacity duration-700"></div>
          
          <!-- Photo Container -->
          <div class="relative w-80 h-80 bg-gradient-to-br from-primary-light to-white rounded-3xl overflow-hidden shadow-2xl group-hover:shadow-3xl transition-all duration-500 group-hover:scale-101 border-4 border-white">
            <img 
              src="/images/me.jpg" 
              alt="Sergei's photo" 
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
            />
            
            <!-- Floating elements -->
            <div class="absolute top-4 right-4 w-8 h-8 bg-primary/20 rounded-full animate-bounce" style="animation-delay: 0.5s;"></div>
            <div class="absolute bottom-6 left-6 w-6 h-6 bg-secondary/20 rounded-full animate-bounce" style="animation-delay: 1s;"></div>
          </div>

          <!-- Floating badges -->
          <!-- <div class="absolute -top-4 -left-4 bg-white shadow-lg rounded-full px-3 py-1 text-sm font-medium text-primary border-2 border-primary/20 animate-bounce" style="animation-delay: 2s;">
            Serbia
          </div> -->
          <div class="absolute -bottom-4 -right-4 bg-white shadow-lg rounded-full px-3 py-1 text-sm font-medium text-secondary border-2 border-secondary/20 animate-bounce" style="animation-delay: 3s;">
            ✨ Available
          </div>
        </div>
      </div>
    </div>
  </div>
</section>