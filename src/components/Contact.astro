<!-- Contact Section -->
<section id="contact" class="py-20 px-6 bg-gradient-to-br from-primary-light/30 via-orange-100/50 to-secondary/20 relative overflow-hidden">
  <!-- Декоративные элементы -->
  <div class="absolute top-10 left-10 w-32 h-32 bg-primary/10 rounded-full blur-2xl animate-pulse" style="animation-duration: 4s;"></div>
  <div class="absolute bottom-10 right-10 w-40 h-40 bg-secondary/8 rounded-full blur-3xl animate-pulse" style="animation-duration: 6s; animation-delay: 2s;"></div>
  <div class="absolute top-1/2 left-1/4 w-24 h-24 bg-primary/12 rounded-full blur-xl animate-pulse" style="animation-duration: 5s; animation-delay: 1s;"></div>
  
  <!-- Плавающие частицы -->
  <div class="absolute top-20 right-1/4 w-3 h-3 bg-primary/30 rounded-full animate-ping" style="animation-duration: 3s;"></div>
  <div class="absolute bottom-20 left-1/3 w-2 h-2 bg-secondary/40 rounded-full animate-ping" style="animation-duration: 4s; animation-delay: 1s;"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-800 mb-8 relative">
          Let's Connect!
          <span class="text-3xl ml-2">🚀</span>
          <!-- Декоративная линия -->
          <div class="absolute -bottom-3 left-0 w-20 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
        </h2>
        
        <div class="space-y-6">
          <p class="text-lg text-gray-700 leading-relaxed">
            Ready to bring your ideas to life? Whether you have an exciting project in mind or just want to grab a coffee <span class="text-primary font-semibold">(virtually!)</span> and chat about tech, I'd love to hear from you!
          </p>
          
          <p class="text-gray-600">
            Feel free to reach out through any of these platforms or send me a message using the form.⚡
          </p>
        </div>
        
        <!-- Social Links -->
        <div class="mt-8">
          <h3 class="text-lg font-semibold text-gray-700 mb-4">Find me on:</h3>
          <div class="flex space-x-6">
            {socialLinks.map((social) => (
              <a 
                href={social.url} 
                target="_blank"
                class="group relative p-3 bg-white/70 backdrop-blur-sm rounded-xl transition-all duration-300 hover:scale-110 hover:shadow-lg border border-orange-200/50 hover:border-primary/30" 
                aria-label={social.name}
              >
                <svg class="w-6 h-6 text-primary group-hover:text-primary-dark transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                  <path d={social.icon}/>
                </svg>
                
                <!-- Tooltip -->
                <div class="absolute -top-10 left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap">
                  {social.name}
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Quick Info -->
        <!-- <div class="mt-8 p-6 bg-gradient-to-r from-primary/10 to-secondary/10 rounded-2xl border border-orange-200/50 backdrop-blur-sm">
          <div class="flex items-center space-x-3">
            <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-primary font-semibold">Available for new projects</span>
          </div>
          <p class="text-gray-600 text-sm mt-2">
            Currently accepting freelance work and collaboration opportunities
          </p>
        </div> -->
      </div>
      
      <!-- Contact Form -->
      <div class="relative">
        <!-- Декоративный фон формы -->
        <div class="absolute inset-0 bg-gradient-to-br from-white/80 to-primary-light/20 rounded-3xl backdrop-blur-sm"></div>
        
        <div class="relative bg-white/90 backdrop-blur-sm rounded-3xl p-8 shadow-sm border border-orange-200/50">
          <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">
            Send me a message 📧
          </h3>
          
          <form class="space-y-6">
            <div class="group">
              <input 
                type="text" 
                placeholder="Your name" 
                name="name"
                required
                class="w-full px-4 py-4 border-2 border-orange-200/50 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 bg-white/80 backdrop-blur-sm group-hover:border-primary/30"
              />
            </div>
            
            <div class="group">
              <input 
                type="email" 
                placeholder="Your email" 
                name="email"
                required
                class="w-full px-4 py-4 border-2 border-orange-200/50 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 bg-white/80 backdrop-blur-sm group-hover:border-primary/30"
              />
            </div>
            
            <div class="group">
              <textarea 
                placeholder="Your message" 
                rows="5" 
                name="message"
                required
                class="w-full px-4 py-4 border-2 border-orange-200/50 rounded-xl focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition-all duration-300 resize-none bg-white/80 backdrop-blur-sm group-hover:border-primary/30"
              ></textarea>
            </div>
            
            <button 
              type="submit" 
              class="w-full bg-gradient-to-r from-primary to-secondary hover:from-primary-dark hover:to-primary text-white px-8 py-4 rounded-xl font-semibold transition-all duration-300 shadow-lg hover:shadow-xl hover:shadow-orange-500/25 hover:scale-[1.02] transform"
            >
              Send Message 🚀
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>