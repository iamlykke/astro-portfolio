---
const experiences = [
  {
    company: "Space307",
    position: "Frontend Developer",
    period: "2022 - Present",
    description: "Developed 15+ internal platforms and services optimizing HR processes using React, TypeScript, and Zustand. Enhanced system performance by 40% while mentoring developers and establishing modern coding standards.",
    current: true
  },
  {
    company: "Rosatom",
    position: "Junior Frontend Developer",
    period: "2021 - 2022",
    description: "Worked on the development of the 'Employee’s Personal Cabinet' — a large-scale internal HR system used daily by over 50,000 employees for managing documents, vacations, and personal data.",
    current: false
  },
  {
    company: "Baltic State Technical University",
    position: "Specialist Degree in Radioelectronic Systems and Complexes",
    period: "2015 - 2021",
    description: "Studied radioelectronics at the Faculty of Information Technologies, where I developed fundamental knowledge in electronic systems and discovered my passion for programming. This technical foundation sparked my transition into software development",
    current: false
  },
];
---

<section id="experience" class="py-20 px-6 bg-white">
   <div class="max-w-4xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 relative inline-block">
        Experience
        <!-- Decorative line under header -->
        <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
      </h2>
    </div>
    
    <div class="relative">
      <div class="hidden sm:block absolute left-4 sm:left-8 top-0 bottom-0 w-0.5 bg-primary"></div>
      
      <div class="space-y-6 sm:space-y-12">
        {experiences.map(exp => (
          <div class="relative flex items-start">
            <!-- Timeline dot -->
            <div class={`hidden relative z-10 sm:flex items-center justify-center w-9 h-9 sm:w-16 sm:h-16 rounded-full ${exp.current ? 'bg-primary' : 'bg-gray-300'} flex-shrink-0`}>
              <div class="w-3 h-3 sm:w-6 sm:h-6 bg-white rounded-full"></div>
            </div>
            
            <div class="ml-0 sm:ml-8 bg-gray-50 rounded-xl p-6 flex-1 shadow-sm border border-orange-200/50">
              <div class="flex flex-row items-center justify-between flex-wrap mb-2 gap-2">
                <h3 class="text-xl font-semibold text-gray-800">{exp.company}</h3>
                <span class={`text-sm px-3 py-1 rounded-full w-fit ${exp.current ? 'bg-primary text-white' : 'bg-gray-200 text-gray-600'}`}>
                  {exp.period}
                </span>
              </div>
              
              <h4 class="text-lg font-medium text-primary mb-3">{exp.position}</h4>
              
              <p class="text-gray-600 leading-relaxed">{exp.description}</p>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Timeline start indicator -->
      <div class="hidden  absolute -left-4 sm:left-0 bottom-0 transform translate-y-4 sm:flex flex-col items-center">
        <!-- <div class="w-4 h-4 bg-primary rounded-full"></div> -->
        <div class="text-xs text-gray-500 mt-2">Career Start</div>
      </div>
    </div>
  </div>
</section>