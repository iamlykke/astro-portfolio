---
import CodeCard from "./CodeCard.astro";

const title = "Sergei";
const description =
  "Frontend developer with a passion for creating engaging, entertaining user experiences.";

---

<section class="min-h-screen flex items-center justify-center px-6">
  <div
    class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
  >
    <div class="text-center lg:text-left">
      <h1 class="text-4xl lg:text-6xl font-light text-gray-800 mb-4">
        Hello! 
      </h1>
      <h2 class="text-3xl lg:text-6xl font-light text-gray-800 mb-6">
        I'm <span class="text-primary font-medium">{title}</span> ðŸ‘‹ 
      </h2>
      <p class="text-lg text-gray-600 mb-4">
        {description}
      </p>
      <div class="flex justify-center lg:justify-start">
        <a
          href="#projects"
          class="bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-lg font-medium transition-colors"
        >
          Download my CV
        </a>
      </div>
    </div>

    <CodeCard />


    <div
      class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
    >
      <svg
        class="w-6 h-6 text-primary"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</section>
