---
const title = "Sergei";
const description = "Frontend developer with a passion for creating engaging, entertaining user experiences.";
---

<section class="min-h-screen flex items-center justify-center px-6">
  <div class="max-w-6xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
    <div class="text-center lg:text-left">
      <h1 class="text-4xl lg:text-6xl font-light text-gray-800 mb-6">
        Hello! I'm <span class="text-primary font-medium">{title}</span>. 👋
      </h1>
      <p class="text-lg text-gray-600 mb-2">
        {description}
      </p>
      <div class="flex justify-center lg:justify-start">
        <a href="#projects" class="bg-primary hover:bg-primary-dark text-white px-8 py-3 rounded-lg font-medium transition-colors">
          View My Work
        </a>
      </div>
    </div>
    
    <div class="flex justify-center lg:justify-end">
      <div class="relative">
        <div class="w-64 h-64 bg-primary rounded-full flex items-center justify-center">
          <div class="w-48 h-48 bg-white rounded-full flex items-center justify-center">
            <div class="text-6xl">👩‍💻</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>