---
// src/components/Projects.astro
const projects = [
  {
    title: "Web Dashboard",
    description: "Analytics dashboard with modern UI",
    bgColor: "bg-purple-light",
    mockup: "laptop"
  },
  {
    title: "Mobile App",
    description: "React Native application", 
    bgColor: "bg-pink-light",
    mockup: "phone"
  },
  {
    title: "Data Visualization",
    description: "Interactive charts and graphs",
    bgColor: "bg-green-light", 
    mockup: "tablet"
  },
  {
    title: "E-commerce Platform",
    description: "Full-stack shopping solution",
    bgColor: "bg-blue-light",
    mockup: "laptop"
  }
];
---

<!-- Projects Section -->
<section id="projects" class="py-20 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-4">
      <p class="text-primary text-sm uppercase tracking-wide">hover over any project to learn more!</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div class={`group relative overflow-hidden rounded-xl ${project.bgColor} p-8 h-80 flex items-center justify-center hover:scale-105 transition-transform duration-300 cursor-pointer`}>
          <div class="text-center">
            <div class="mb-4">
              {project.mockup === "laptop" && (
                <div class="w-32 h-24 bg-white rounded-lg mx-auto shadow-lg flex items-center justify-center">
                  <div class="w-24 h-16 bg-gradient-to-br from-orange-400 to-orange-600 rounded"></div>
                </div>
              )}
              {project.mockup === "phone" && (
                <div class="w-16 h-28 bg-gray-800 rounded-lg mx-auto shadow-lg flex items-center justify-center">
                  <div class="text-white text-xs">ðŸ“±</div>
                </div>
              )}
              {project.mockup === "tablet" && (
                <div class="w-24 h-32 bg-white rounded-lg mx-auto shadow-lg flex items-center justify-center">
                  <div class="text-2xl">ðŸ“Š</div>
                </div>
              )}
            </div>
            <h3 class="text-xl font-semibold text-gray-800 group-hover:text-primary transition-colors">
              {project.title}
            </h3>
            <p class="text-gray-600 mt-2 opacity-0 group-hover:opacity-100 transition-opacity">
              {project.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>