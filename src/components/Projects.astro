---
// src/components/Projects.astro
const projects = [
  {
    title: "E-commerce Platform",
    description: "Full-stack shopping solution with modern UI",
    bgColor: "bg-purple-light/40",
    mockup: "laptop",
    tech: ["React", "Node.js", "PostgreSQL"]
  },
  {
    title: "Task Management App",
    description: "Collaborative project management tool", 
    bgColor: "bg-pink-light/40",
    mockup: "phone",
    tech: ["React Native", "Firebase", "TypeScript"]
  },
  {
    title: "Analytics Dashboard",
    description: "Real-time data visualization platform",
    bgColor: "bg-green-light/40", 
    mockup: "tablet",
    tech: ["Next.js", "D3.js", "MongoDB"]
  },
  {
    title: "Portfolio Website",
    description: "Modern developer portfolio with Astro",
    bgColor: "bg-blue-light/40",
    mockup: "laptop",
    tech: ["Astro", "Tailwind", "TypeScript"]
  }
];
---

<!-- Projects Section -->
<section id="projects" class="py-20 px-6 bg-gradient-to-b from-white to-gray-50/50 relative overflow-hidden">
  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 relative inline-block">
        Featured Projects
        <div class="absolute -bottom-3 left-1/2 transform -translate-x-1/2 w-20 h-1 bg-gradient-to-r from-primary to-secondary rounded-full"></div>
      </h2>
      <p class="text-primary text-sm uppercase tracking-wider font-medium mt-6">
        Hover over any project to learn more!
      </p>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class={`group relative overflow-hidden rounded-3xl ${project.bgColor} backdrop-blur-sm p-8 h-80 flex flex-col justify-between hover:scale-[1.02] transition-all duration-500 cursor-pointer border border-orange-200/50 hover:border-orange-200/70 shadow-sm hover:shadow-lg hover:shadow-primary/10`}>          
          <!-- Content -->
          <div class="relative z-10 flex flex-col h-full">
            <!-- Mockup -->
            <div class="flex justify-center mb-6 flex-grow items-center">
              {project.mockup === "laptop" ? (
                <div class="relative">
                  <div class="w-32 h-24 bg-white rounded-lg shadow-xl border-4 border-gray-200 flex items-center justify-center group-hover:shadow-2xl transition-shadow duration-500">
                    <div class="w-24 h-16 bg-gradient-to-br from-primary to-secondary rounded opacity-80"></div>
                  </div>
                  <div class="absolute inset-0 bg-primary/20 rounded-lg blur opacity-0 group-hover:opacity-50 transition-opacity duration-500"></div>
                </div>
              ) : project.mockup === "phone" ? (
                <div class="relative">
                  <div class="w-16 h-32 bg-gray-800 rounded-xl shadow-xl flex items-center justify-center group-hover:shadow-2xl transition-shadow duration-500">
                    <div class="w-12 h-24 bg-white rounded-lg flex items-center justify-center">
                      <div class="w-8 h-16 bg-gradient-to-b from-primary to-secondary rounded opacity-80"></div>
                    </div>
                  </div>
                  <div class="absolute inset-0 bg-primary/10 rounded-xl blur opacity-0 group-hover:opacity-30 transition-opacity duration-500"></div>
                </div>
              ) : (
                <div class="relative">
                  <div class="w-28 h-36 bg-white rounded-2xl shadow-xl border-4 border-gray-200 flex items-center justify-center group-hover:shadow-2xl transition-shadow duration-500">
                    <div class="w-20 h-28 bg-gradient-to-tr from-primary via-secondary to-primary rounded-lg opacity-80 flex items-center justify-center">
                      <div class="text-white text-lg">ðŸ“Š</div>
                    </div>
                  </div>
                  <div class="absolute inset-0 bg-secondary/20 rounded-2xl blur opacity-0 group-hover:opacity-40 transition-opacity duration-500"></div>
                </div>
              )}
            </div>
            
            <div class="text-center">
              <h3 class="text-xl font-bold text-gray-800 group-hover:text-primary transition-colors duration-300 mb-2">
                {project.title}
              </h3>
              <p class="text-gray-600 text-sm mb-4 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
                {project.description}
              </p>
              
              <div class="flex flex-wrap justify-center gap-2 opacity-0 group-hover:opacity-100 transition-all duration-500 delay-100">
                {project.tech.map((tech) => (
                  <span class="text-xs bg-white/80 backdrop-blur-sm text-primary px-2 py-1 rounded-full border border-primary/20 font-medium">
                    {tech}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>